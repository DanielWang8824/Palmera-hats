{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "declaration": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
    },
    "include": [
        "*.ts",
        "./scripts",
        "./tasks",
        "./test",
        "./typechain-types"
    ],
    "files": [
        "./hardhat.config.ts"
    ]
}